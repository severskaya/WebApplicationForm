<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		  xmlns="http://dozer.sourceforge.net"
		  xsi:schemaLocation="http://dozer.sourceforge.net
          http://dozer.sourceforge.net/schema/beanmapping.xsd">
	<configuration>
		<custom-converters>
			<converter type="com.stwitter.converter.LocalDateCustomConverter">
				<class-a>java.util.Date</class-a>
				<class-b>org.joda.time.LocalDate</class-b>
			</converter>

			<converter type="com.webProject.converter.LocalDateTimeCustomConverter">
				<class-a>java.util.Date</class-a>
				<class-b>org.joda.time.LocalDateTime</class-b>
			</converter>
		</custom-converters>
	</configuration>

</mappings>